Bootstrap: docker
From: ubuntu:22.04

%files
    . /opt/build_files
%post
    # Install dependencies
    apt-get update && apt-get install -y \
    build-essential \
    openmpi-bin \
    openmpi-common \
    cmake \
    libopenmpi-dev
                      
    cd /opt/build_files
    ls -la
    rm -rf build
    chmod +x build.sh
    ./build.sh

%files
    . /app

%post
    cd /app
    mkdir -p build
    cd build
    cmake ..
    make

%runscript
    cd /opt/build_files/build && mpirun -n 2 main