Bootstrap: docker
From: ubuntu:22.04

%files
    . /opt/build_files
%post
    # Install dependencies
    apt-get update && apt-get install -y \
    build-essential \
    openmpi-bin \
    openmpi-common \
    cmake \
    libopenmpi-dev
                      
    cd /opt/build_files
    rm -rf build
    chmod +x build.sh
    ./build.sh

%runscript
    cd /opt/build_files/build
    export TMPDIR=/scratch
    mpirun -n 2 ./main